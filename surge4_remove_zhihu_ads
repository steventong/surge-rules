#!name=Remove Zhihu Ads
#!desc=移除知乎 iOS App 上的扰人广告 (Source: https://github.com/onewayticket255/)
#!system=ios

[Rule]
DOMAIN,appcloud2.zhihu.com,REJECT

DOMAIN,118.89.204.198,REJECT

USER-AGENT,AVOS*,REJECT
URL-REGEX,https://api.zhihu.com/(ad|drama|fringe|commercial|market/popover|search/(top|preset|tab)|.*featured-comment-ad),REJECT
AND,((USER-AGENT,ZhihuHybrid*), (URL-REGEX,.*recommend)),REJECT

[Script]
Zhihu People = type=http-response,requires-body=1,max-size=0,pattern=https://api.zhihu.com/people/,script-path=https://ruleset.dev/surge3_zhihu_people,script-update-interval=86400
Zhihu Feed = type=http-response,requires-body=1,max-size=0,pattern=https://api.zhihu.com/moments/recommend,script-path=https://ruleset.dev/zhihu_feed,script-update-interval=86400
Zhihu Recommend = type=http-response,requires-body=1,max-size=0,pattern=https://api.zhihu.com/topstory/recommend,script-path=https://ruleset.dev/zhihu_recommend,script-update-interval=86400
Zhihu Answer = type=http-response,requires-body=1,max-size=0,pattern=https://api.zhihu.com/v4/questions,script-path=https://ruleset.dev/zhihu_answer,script-update-interval=86400
Zhihu Link = type=http-request,pattern=https?://link.zhihu.com/\?target=,script-path=https://ruleset.dev/surge4_zhihu_link,script-update-interval=86400
